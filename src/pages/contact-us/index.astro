---
import Layout from "../../layouts/Layout.astro";

const meta = {
	title:'Contact ISIR Ghana | Partner with Us for Sustainable Development',
	description:'Get in touch with ISIR Ghana to collaborate, partner, or learn more about our research, innovation, and sustainability initiatives.',
	image:'',
	url:Astro.url,
	
}
---
<Layout {...meta}>
    <section class='bg-gradient-to-br from-sky-100'>
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">    
            <section class="overflow-hidden">
            <div class="container px-4 mx-auto pt-16 pb-20">
                <div class="flex flex-wrap -mx-4">
                    <div class="w-full lg:w-1/2 p-4">
                        <div class="max-w-xl mx-auto">
                        <h1 class="text-3xl lg:text-5xl font-bold font-heading mb-4 max-w-xs lg:max-w-md">How can we help you today?</h1>
                        <p class="text-gray-600 mb-10">Submit your info and weâ€™ll get back to you as soon as possible.</p>
                        <div class="mb-10 flex items-center gap-1">
                            <div class="bg-sky-200  rounded-3xl h-px w-3"></div>
                            <svg xmlns="http://www.w3.org/2000/svg" width="3" height="3" viewBox="0 0 3 3" fill="none"><circle cx="1.5" cy="1.5" r="1.5" fill="#FFA632" ></circle></svg>
                            <svg xmlns="http://www.w3.org/2000/svg" width="3" height="3" viewBox="0 0 3 3" fill="none"><circle cx="1.5" cy="1.5" r="1.5" fill="#FFA632" ></circle></svg>
                            <svg xmlns="http://www.w3.org/2000/svg" width="3" height="3" viewBox="0 0 3 3" fill="none"><circle cx="1.5" cy="1.5" r="1.5" fill="#FFA632" ></circle></svg>
                            <div class="bg-sky-200 rounded-3xl h-px w-3"></div>
                        </div>
                        <div class="flex items-center flex-wrap gap-3 mb-4">
                            <div class="bg-sky-600 rounded-xl p-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="M12 10h.01"/><path d="M12 14h.01"/><path d="M12 6h.01"/><path d="M16 10h.01"/><path d="M16 14h.01"/><path d="M16 6h.01"/><path d="M8 10h.01"/><path d="M8 14h.01"/><path d="M8 6h.01"/><path d="M9 22v-3a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v3"/><rect x="4" y="2" width="16" height="20" rx="2"/></svg>
                            </div>
                            <h2 class="text-xl font-bold font-heading">Company HQ</h2>
                        </div>
                        <p class="text-gray-600 mb-10">Tamale, Northern Region 00233, GH</p>
                        
                        <div class="space-y-6">
                            <div class="flex  items-center">
                            <div class="flex flex-shrink-0 mr-5 sm:mr-8 items-center justify-center p-1 size-8 rounded-full bg-sky-600">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"/><rect x="2" y="4" width="20" height="16" rx="2"/></svg>
                            </div>
                            <div>
                                <span class="sm:text-lg text-gray-500">Email</span>
                                <span class="block font-semibold text-gray-900">isirghana@gmail.com</span>
                            </div>
                        </div>
                        <div class="flex items-center">
                            <div class="flex flex-shrink-0 mr-5 sm:mr-8 items-center justify-center p-1 size-8 rounded-full bg-sky-600">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white size-5"><path d="M13.832 16.568a1 1 0 0 0 1.213-.303l.355-.465A2 2 0 0 1 17 15h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2A18 18 0 0 1 2 4a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v3a2 2 0 0 1-.8 1.6l-.468.351a1 1 0 0 0-.292 1.233 14 14 0 0 0 6.392 6.384"/></svg>
                            </div>
                            <div>
                                <span class="sm:text-lg text-gray-500">Phone</span>
                                <span class="block font-semibold text-gray-900"> Mobile: +233 244 186 419</span>
                                <span class="block font-semibold text-gray-900"> Office: +233 207 436 517</span>
                            </div>
                        </div>

                        </div>
                    </div>
                </div>

                    {/* Form */}
                    <div class="w-full lg:w-1/2 p-4">
                        <form action="">
                        <div class="border border-sky-600 rounded p-2 md:p-6 max-w-xl mx-auto">
                            <div class="w-full ">
                                <label class="text-sm mt-3 text-gray-700 block">Full name</label>
                                <input class="w-full rounded text-lg px-4 py-1 outline-none border border-sky-600 focus:border-black placeholder-gray-500"  type="text" placeholder="Full name"/>
                            </div>

                            <div class="w-full">
                                <label class="text-sm mt-3 text-gray-700 block" >Email</label>
                                <input class="w-full rounded text-lg px-4 py-1 outline-none border border-sky-600 placeholder-gray-500 focus:border-black "  type="text" placeholder="Email address"/>
                            </div>

                            <div class="w-full">
                                <label class="text-sm mt-3 text-gray-700 block" >Message</label>
                                <textarea class="resize-none w-full rounded border-sky-600 p-4 outline-none border  placeholder-gray-500 focus:border-black text-lg " id="textInput4" rows={3} placeholder="Enter your message"/>
                            </div>

                            <button class="py-2 px-6 rounded w-full inline-flex items-center justify-center text-center mb-8 bg-sky-500 border border-sky-600 font-bold font-heading text-white hover:bg-sky-600 focus:ring focus:ring-sky-200 " type="submit">Submit</button>
                            <p class="text-gray-500 text-sm text-center">
                            <span>Your information will not be shared.</span>
                            </p>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
            </section>
        </div>
    </section>
</Layout>

