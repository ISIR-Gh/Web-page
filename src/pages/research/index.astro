---
import { ArrowDownLeftIcon, ArrowTrendingUpIcon, CloudIcon, HeartIcon, LinkIcon, UsersIcon } from "@heroicons/vue/24/outline";
import Layout from "../../layouts/Layout.astro"
import { Picture } from "astro:assets";
import Research from '../../assets/research3.jpg'



const meta = {
	title:'Our Research & Publications ',
	description:'Bridging knowledge and action through evidence-based insights that drive sustainable development.',
}

  const featuredResearch = [
    {
      title: "Maternal Mortality Reduction in Rural Ghana",
      summary: "A comprehensive study on community-based interventions that reduced maternal mortality by 34% in three rural districts.",
      authors: "Dr. Ama Owusu, Dr. Kwame Mensah",
      year: "2024",
      sector: "Health",
      image: "https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=400&h=250&fit=crop"
    },
    {
      title: "STEAM Education Impact Assessment",
      summary: "Evaluating the effectiveness of hands-on STEAM programs in improving student engagement and performance in 50 schools.",
      authors: "Prof. Akosua Darko, Michael Osei",
      year: "2024",
      sector: "Education",
      image: "https://images.unsplash.com/photo-1503676260728-1c00da094a0b?w=400&h=250&fit=crop"
    },
    {
      title: "Climate-Smart Agriculture Practices",
      summary: "Pilot study on drought-resistant crops and water conservation techniques adopted by 2,000 smallholder farmers.",
      authors: "Dr. Kofi Annan, Sarah Mensah",
      year: "2023",
      sector: "Agriculture",
      image: "https://images.unsplash.com/photo-1574943320219-553eb213f72d?w=400&h=250&fit=crop"
    },
    {
      title: "Urban Heat Island Mitigation Strategies",
      summary: "Research on green infrastructure solutions to reduce urban temperatures in Accra by up to 5Â°C.",
      authors: "Dr. Abena Boateng",
      year: "2024",
      sector: "Climate",
      image: "https://images.unsplash.com/photo-1569163139394-de4798aa62b5?w=400&h=250&fit=crop"
    },
    {
      title: "Child Nutrition Security Framework",
      summary: "Multi-sectoral approach to addressing malnutrition in children under five across three regions.",
      authors: "Dr. Yaw Osei, Dr. Efua Mensah",
      year: "2023",
      sector: "Health",
      image: "https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=400&h=250&fit=crop"
    },
    {
      title: "Renewable Energy Access in Rural Schools",
      summary: "Impact study of solar-powered learning centers on educational outcomes and community development.",
      authors: "Kwabena Nkrumah, Dr. Esi Quartey",
      year: "2023",
      sector: "Education",
      image: "https://images.unsplash.com/photo-1473341304170-971dccb5ac1e?w=400&h=250&fit=crop"
    }
  ];

---

<Layout {...meta}>
    <div>
    <div class="min-h-screen bg-white">
      {/* Hero Section */}
    <div class='relative'>
		<Picture src={Research} priority alt='Hero image' class='aspect-video h-[80dvh] md:h-[80dvh] object-cover' />
			<div class="absolute inset-0 bg-gradient-to-tr from-sky-600 "/>
			<div class="absolute inset-0 bg-black/50" />
			<div class='absolute inset-0  flex items-center'>
				<div class="px-8 max-w-3xl">
					<h1 class="text-4xl md:text-5xl font-bold text-white tracking-tight">Our Research & Publications</h1>
					<div class="mt-4 h-1 w-16 rounded bg-[#04B130]" />
					<p class="text-xl lg:text-2xl my-8 text-white ">
                    Bridging knowledge and action through evidence-based insights that drive sustainable development.
                    </p>
					<div class="mt-10 flex flex-wrap gap-4 items-center">         
					<a href=`${import.meta.env.BASE_URL}/contact-us` class='secondary-link flex items-center gap-2 w-fit'>
                        <UsersIcon class="w-5 h-5" />
                        Partner With Us
                    </a>          
				</div>
				</div>
			</div>
		</div>

      {/* About Our Research */}
      <div class="max-w-6xl mx-auto px-4 py-20">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">About Our Research</h2>
            <p class="text-lg text-gray-700 mb-4">
              ISIR Ghana conducts applied, multidisciplinary research that bridges the gap between knowledge generation and practical action. Our evidence-based approach informs policy, strengthens communities, and drives sustainable development across Ghana.
            </p>
            <p class="text-lg text-gray-700 mb-6">
              Through rigorous data collection, stakeholder engagement, and continuous impact measurement, we address critical challenges in <span class="font-semibold text-sky-600">Child & Maternal Health, Education (STEAM Focus), Agriculture, and Climate Change.
            </p>
            <div class="flex items-center gap-2 text-green-600 font-semibold">
              <ArrowTrendingUpIcon class="w-5 h-5" />
              <span>Impact-driven. Data-informed. Community-centered.</span>
            </div>
          </div>
          <div class="bg-gradient-to-br from-green-50 to-sky-50 rounded-2xl p-8 lg:p-12">
            <img 
              src="https://images.unsplash.com/photo-1532619675605-1ede6c2ed2b0?w=600&h=400&fit=crop" 
              alt="Research team" 
              class="rounded-lg shadow-lg w-full"
            />
          </div>
        </div>
      </div>


      {/* Featured Research */}
      <div class="max-w-6xl mx-auto px-4 py-20">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4 text-center">Featured Research</h2>
        <p class="text-lg text-gray-600 mb-12 text-center max-w-2xl mx-auto">
          Highlighting impactful studies and flagship projects driving change
        </p>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredResearch.map((research, index) => (
            <div class="bg-white rounded-xl shadow-sm hover:shadow-xl transition overflow-hidden group">
              <div class="relative h-48 overflow-hidden">
                <img 
                  src={research.image} 
                  alt={research.title} 
                  class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
                />
                <div class="absolute top-4 right-4 bg-white px-3 py-1 rounded-full text-sm font-semibold text-gray-700">
                  {research.year}
                </div>
              </div>
              <div class="p-6">
                <div class="text-sm font-semibold text-green-600 mb-2">{research.sector}</div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">{research.title}</h3>
                <p class="text-gray-600 mb-4">{research.summary}</p>
                <p class="text-sm text-gray-500 mb-4">{research.authors}</p>
                <button class="primary-link flex items-center justify-center gap-2">
                  <ArrowDownLeftIcon class="w-4 h-4" />
                  View Report
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>


      {/* Collaboration CTA */}
      <div class="max-w-6xl mx-auto px-4 py-20">
        <div class="bg-gradient-to-br from-green-50 to-sky-50 rounded-2xl p-12 text-center">
          <UsersIcon class="w-16 h-16 text-green-600 mx-auto mb-6" />
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            Let's Collaborate for Impact
          </h2>
          <p class="text-lg text-gray-700 mb-8 max-w-2xl mx-auto">
            ISIR Ghana welcomes collaboration in research, innovation pilots, and data-driven policy initiatives. 
            Together, we can bridge knowledge and action for sustainable development.
          </p>
          <a href=`${import.meta.env.BASE_URL}/contact-us` class="primary-link">
            Collaborate With ISIR
          </a>
        </div>
      </div>
    </div>
</Layout>

  



